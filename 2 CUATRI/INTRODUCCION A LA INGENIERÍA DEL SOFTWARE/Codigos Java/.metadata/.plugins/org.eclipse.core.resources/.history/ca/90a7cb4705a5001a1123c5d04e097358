package prBolos;

public class JuegoBolos 
{
	int[] tiradas = new int[21];
	int tiradaActual;
	int RONDAS = 10;
	
	public void tirada(int p) 
	{
		tiradas[tiradaActual++] = p;
	}

	public int puntuar() 
	{
		int score = 0;
		int frame = 0;

		for (int i = 0; i < RONDAS; i++)
		{
			if (isStrike(frame)) 
			{
				score += 10 + strikeBonus(frame);
				frame++;
			} 
			else if (isSpare(frame)) 
			{
				score += 10 + spareBonus(frame);
				frame += 2;
			} 
			else 
			{
				score += sumOfRolls(frame);
				frame += 2;
			}
		}

		return score;
	}

	private boolean isStrike(int frame) 
	{
		return tiradas[frame] == 10;
	}

	private boolean isSpare(int frame) 
	{
		return sumOfRolls(frame) == 10;
	}

	private int strikeBonus(int frame) 
	{
		return sumOfRolls(frame+1);
	}

	private int spareBonus(int frame) 
	{
		return tiradas[frame+2];
	}

	private int sumOfRolls(int frame)
	{
		return tiradas[frame] + tiradas[frame+1];
	}

}