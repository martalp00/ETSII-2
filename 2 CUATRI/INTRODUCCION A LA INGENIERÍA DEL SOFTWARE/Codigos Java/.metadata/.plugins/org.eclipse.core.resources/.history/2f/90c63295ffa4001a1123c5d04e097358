package prBolos;

public class JuegoBolos
{
	private int[] partida;
	//private int numJugadores = 2;
	
	public JuegoBolos()
	{
		partida = new int[10];
	}
	
	public void rondas(int[] part)
	{
		for(int i=0; i < part.length; i++)
		{
			for(int tiro=0; tiro < 2; tiro++)
			{
				tirada();
			}
		}
	}
	
	private int tirada(int tira1, int tira2) 
	{
		return tira1 + tira2;
	}

	public void puntuar()
	{
		
	}

}
